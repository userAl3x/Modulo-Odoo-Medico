<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_especialidad_form" model="ir.ui.view">
        <field name="name">gestion.especialidad.form</field>
        <field name="model">gestion.especialidad</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="nombre"/>
                    </group>
                    <notebook>
                        <page string="Médicos">
                            <field name="medico_ids" readonly="1">
                                <tree>
                                    <field name="nombre"/>
                                    <field name="apellidos"/>
                                    <field name="disponibilidad"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol -->
    <record id="view_especialidad_tree" model="ir.ui.view">
        <field name="name">gestion.especialidad.tree</field>
        <field name="model">gestion.especialidad</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_especialidad_search" model="ir.ui.view">
        <field name="name">gestion.especialidad.search</field>
        <field name="model">gestion.especialidad</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_especialidad" model="ir.actions.act_window">
        <field name="name">Especialidades</field>
        <field name="res_model">gestion.especialidad</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear la primera especialidad
            </p>
        </field>
    </record>
</odoo> 