<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario -->
    <record id="view_paciente_form" model="ir.ui.view">
        <field name="name">gestion.paciente.form</field>
        <field name="model">gestion.paciente</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_citas" 
                                type="object"
                                class="oe_stat_button"
                                icon="fa-calendar">
                            <field name="cita_count" widget="statinfo" string="Citas"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="nombre"/>
                            <field name="apellidos"/>
                            <field name="fecha_nacimiento"/>
                        </group>
                        <group>
                            <field name="telefono"/>
                            <field name="email"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Citas">
                            <field name="cita_ids" readonly="1">
                                <tree>
                                    <field name="fecha_hora"/>
                                    <field name="medico_id"/>
                                    <field name="estado"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol -->
    <record id="view_paciente_tree" model="ir.ui.view">
        <field name="name">gestion.paciente.tree</field>
        <field name="model">gestion.paciente</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="fecha_nacimiento"/>
                <field name="telefono"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_paciente_search" model="ir.ui.view">
        <field name="name">gestion.paciente.search</field>
        <field name="model">gestion.paciente</field>
        <field name="arch" type="xml">
            <search>
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="email"/>
                <field name="telefono"/>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_paciente" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">gestion.paciente</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear el primer paciente
            </p>
        </field>
    </record>
</odoo> 